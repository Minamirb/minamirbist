<h1>Listing members</h1>

<table>
  <tr>
    <th>名前</th>
    <th>住所</th>
    <th>E-Mail</th>
    <th>Twitter</th>
    <th>ブログURL</th>
    <th>誕生日</th>
    <th>自己紹介</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @members.each do |member| %>
  <tr>
    <td><%= member.name %></td>
    <td><%= member.address %></td>
    <td><%= member.email %></td>
    <td><%= member.twitter_id %></td>
    <td><%= member.blog %></td>
    <td><%= member.birthday %></td>
    <td><%= member.pr %></td>
    <td><%= button_to '確認', member ,:method => :get %></td>
    <td><%= link_to '修正', edit_member_path(member) %></td>
    <td><%= link_to '削除', member, :confirm => '削除してもよろしいですか?', :method => :delete %></td>
  </tr>
<% end %>
</table>

