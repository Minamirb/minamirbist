<h1>イベント 一覧</h1>

<table class="list">
  <tr>
    <%- [:date_on, :name, :place, :contents].each do |c| -%>
    <th><%= column_attr c %></th>
    <%- end -%>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= event.date_on %></td>
    <td><%= link_to event.name ,event_entries_path(event) %></td>
    <td><%= event.place %></td>
    <td><%= event.contents %></td>
    <td><%= button_to t('nav.show'), event,:method => :get %></td>
    <td><%= link_to t('nav.edit'), edit_event_path(event) %></td>
    <td><%= link_to t('nav.destroy'), event, :confirm => '削除しますがよろしいですか?', :method => :delete %></td>
  </tr>
<% end %>
</table>

