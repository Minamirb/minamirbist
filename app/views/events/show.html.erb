<p id="notice"><%= notice %></p>

<p>
  <b>日付:</b>
  <%= l(@event.date_on) %>
</p>

<p>
  <b>名称:</b>
  <%= @event.name %>
</p>

<p>
  <b>場所:</b>
  <%= @event.place %>
</p>

<p>
  <b>やること:</b>
  <%= @event.contents %>
</p>

<%= button_to "参加する", new_event_entry_path(@event), :method => :get  %>

<%= link_to '修正', edit_event_path(@event) %> |
<%= link_to '戻る', events_path %>
<hr size='2' width='400' align='left'>
<div>参加者リスト</div>
<% unless @event.entries.blank? -%>
<table>
  <tr><th>No.</th><th>名前</th><th>登録日時</th>
  <% @event.entries.each_with_index do |entry, i| %>
    <tr>
      <td><%= i + 1 %></td>
      <td><%= entry.member.name %></td>
      <td><%= l(entry.created_at) %></td>
      <td><%= button_to "キャンセル", {:controller => :entries, :action => :destroy, :event_id => params[:id], :id => entry}, :method => :delete %></td>
    </tr>
  <% end %>
</table>
<% else -%>
<p class="notice">現在参加者はいません。</p>
<% end -%>
